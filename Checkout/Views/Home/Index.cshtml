@model Checkout.Models.CheckoutDto
@{
    ViewData["Title"] = "Finalizar Compra";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Product.nomeLivro)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.nomeLivro)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.precoLivro)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.precoLivro)
        </dd>
    </dl>
</div>
<div class="row">
    @* Para ocupar 1/3 da tela, pois o bootstrap divide a tela em 12 partes... *@
    <div class="col-md-4">
        <form asp-action="Checkout">
            <input type="hidden" asp-for="Product.id" />
         @* Um sumário, com os campos dos atributos que não foram validados no submit ... *@
          @* <div asp-validation-summary="All" class="text-danger"></div> *@
            <div class="form-group">
                <label asp-for="Customer.Name" class="control-label"></label>
                <input asp-for="Customer.Name" class="form-control" />
                @* <span asp-validation-for="Seller.Name" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control" />
                @* <span asp-validation-for="Seller.Email" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Customer.Phone" class="control-label"></label>
                <input asp-for="Customer.Phone" class="form-control" />
                @* <span asp-validation-for="Seller.Telefone" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Customer.CreditCard" class="control-label"></label>
                <input asp-for="Customer.CreditCard" class="form-control" />
                @* <span asp-validation-for="Seller.CartaoCredito" class="text-danger"></span> *@
            </div>          
            <div class="form-group">
                <input type="submit" value="Checkout" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
